@using Microsoft.AspNetCore.Identity
@using SimpleTaskManagerApp.Data.Models
@using SimpleTaskManagerApp.Data.Models.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="btn btn-link nav-link text-light"><i class="fa-solid fa-right-from-bracket"></i> Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
			<a class="btn btn-link nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
			<a class="btn btn-link nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
