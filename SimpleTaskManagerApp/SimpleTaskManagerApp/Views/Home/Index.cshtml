@{
	ViewData["Title"] = "Home Page";
	var welcomeMessage = ViewBag.WelcomeBackMessage as string;
	bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
}

@if (!string.IsNullOrEmpty(welcomeMessage))
{
	<div class="mt-4 p-4 border rounded shadow-sm text-center" style="background-color: rgb(248, 242, 129);">
		<h2>@welcomeMessage</h2>
	</div>
}
else if (!isAuthenticated)
{
	<div class="mt-4 p-4 border rounded shadow-sm text-center">
		<h2>Welcome to SimpleManagerApp!</h2>
		<p class="text-muted">Please log in to get started.</p>
	</div>
}

<div class="container mt-5 mb-5">
	<div class="row justify-content-center g-4">

		<div class="col-sm-10 col-md-5 col-lg-4">
			<a asp-controller="Tasks" asp-action="Create" class="text-decoration-none text-dark">
				<div class="card shadow-sm" style="max-height: 620px;">
					<img src="~/images/create.png" class="card-img-top" alt="Create Task" style="max-height: 560px; object-fit: cover;">
					<div class="card-body py-3">
						<h6 class="card-title mb-2">Create New Task</h6>
						<p class="card-text small">Add a new task to your list and keep track of what you need to do.</p>
					</div>
				</div>
			</a>
		</div>

		<div class="col-sm-10 col-md-5 col-lg-4">
			<a asp-controller="Tasks" asp-action="Index" class="text-decoration-none text-dark">
				<div class="card shadow-sm" style="max-height: 620px;">
					<img src="~/images/tasks.png" class="card-img-top" alt="View Tasks" style="max-height: 560px; object-fit: cover;">
					<div class="card-body py-3">
						<h6 class="card-title mb-2">View All Tasks</h6>
						<p class="card-text small">See all your current tasks and manage their status easily.</p>
					</div>
				</div>
			</a>
		</div>


	</div>
</div>



