@using SimpleTaskManagerApp.ViewModels.Administrator
@model AdminDashboardViewModel

@if (ViewBag.WelcomeMessage != null)
{
	<div class="alert alert-success mt-4" role="alert">
		Welcome, Admin <strong>@ViewBag.WelcomeMessage</strong>!
	</div>
}

@{
	ViewData["Title"] = "Admin Dashboard";
}



<h1 class="mb-4">Admin Dashboard</h1>

<div class="row">
	<div class="col-md-3">
		<div class="card text-white bg-primary mb-3">
			<div class="card-header">Total Users</div>
			<div class="card-body">
				<h5 class="card-title">@Model.TotalUsers</h5>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="card text-white bg-dark mb-3">
			<div class="card-header">Total Tasks</div>
			<div class="card-body">
				<h5 class="card-title">@Model.TotalTasks</h5>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="card text-white bg-success mb-3">
			<div class="card-header">Completed Tasks</div>
			<div class="card-body">
				<h5 class="card-title">@Model.CompletedTasks</h5>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="card text-white bg-danger mb-3">
			<div class="card-header">Tasks for Today</div>
			<div class="card-body">
				<h5 class="card-title">@Model.TodaysTasks</h5>
			</div>
		</div>
	</div>
</div>

<ul class="nav mb-3">
	<li class="nav-item">
		<a class="btn btn-primary me-2" asp-area="Administrator" asp-controller="Administrator" asp-action="Index">Dashboard</a>
	</li>
	<li class="nav-item">
		<a class="btn btn-outline-secondary me-2" asp-area="Administrator" asp-controller="Users" asp-action="Index">Users</a>
	</li>
	<li class="nav-item">
		<a class="btn btn-outline-secondary me-2" asp-area="Administrator" asp-controller="Tasks" asp-action="Index">Tasks</a>
	</li>
</ul>