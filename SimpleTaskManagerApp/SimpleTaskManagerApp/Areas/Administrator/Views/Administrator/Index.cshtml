@using SimpleTaskManagerApp.ViewModels.Administrator
@model AdminDashboardViewModel

@if (ViewBag.WelcomeMessage != null)
{
	<div class="alert alert-success mt-4" role="alert">
		Welcome, Admin <strong>@ViewBag.WelcomeMessage</strong>!
	</div>
}

@{
	ViewData["Title"] = "Admin Dashboard";
}



<h1 class="mb-4">Admin Dashboard</h1>

<div class="row g-4 text-center">
	<div class="col-md-3">
		<div class="card bg-dark text-white shadow-sm rounded-4 h-100 border-0">
			<div class="card-body">
				<i class="fas fa-users fa-2x mb-3 text-secondary"></i>
				<h6 class="text-uppercase text-white">Total Users</h6>
				<h2 class="fw-bold">@Model.TotalUsers</h2>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="card bg-dark text-white shadow-sm rounded-4 h-100 border-0">
			<div class="card-body">
				<i class="fas fa-tasks fa-2x mb-3 text-secondary"></i>
				<h6 class="text-uppercase text-white">Total Tasks</h6>
				<h2 class="fw-bold">@Model.TotalTasks</h2>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="card bg-dark text-white shadow-sm rounded-4 h-100 border-0">
			<div class="card-body">
				<i class="fas fa-check-circle fa-2x mb-3 text-success"></i>
				<h6 class="text-uppercase text-white">Completed Tasks</h6>
				<h2 class="fw-bold">@Model.CompletedTasks</h2>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="card bg-dark text-white shadow-sm rounded-4 h-100 border-0">
			<div class="card-body">
				<i class="fas fa-calendar-day fa-2x mb-3 text-warning"></i>
				<h6 class="text-uppercase text-white">Tasks for Today</h6>
				<h2 class="fw-bold">@Model.TodaysTasks</h2>
			</div>
		</div>
	</div>
</div>

<ul class="nav mb-3 mt-3">
	<li class="nav-item">
		<a class="btn btn-primary me-2" asp-area="Administrator" asp-controller="Administrator" asp-action="Index">Dashboard</a>
	</li>
	<li class="nav-item">
		<a class="btn btn-outline-secondary me-2" asp-area="Administrator" asp-controller="Users" asp-action="Index">Users</a>
	</li>
	<li class="nav-item">
		<a class="btn btn-outline-secondary me-2" asp-area="Administrator" asp-controller="Tasks" asp-action="Index">Tasks</a>
	</li>
</ul>